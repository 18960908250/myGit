<!--index.wxml-->
<scroll-view scroll-y class="DrawerPage {{showDrawer?'show':''}}">
  <view class="container">
    <view class='cu-custom'>
      <view class="cu-bar fixed bg-shadeTop" style="height:{{CustomBar}}px;padding-top:{{StatusBar}}px;">
        <view class='content' style='top:{{StatusBar}}px;'>welcome</view>
      </view>
    </view>
    <swiper class="screen-swiper round-dot" indicator-dots="true" circular="true" autoplay="true" interval="5000" duration="500">
      <swiper-item wx:for="{{swiperList}}" wx:key>
        <image src="{{item.url}}" mode="aspectFill" wx:if="{{item.type=='image'}}"></image>
        <video src="{{item.url}}" autoplay loop muted show-play-btn="{{false}}" controls="{{false}}" objectFit="cover" wx:if="{{item.type=='video'}}"></video>
      </swiper-item>
    </swiper>
    <view class="cu-list grid col-{{gridCol}} {{gridBorder?'':'no-border'}}">
      <view class="cu-item" bindtap="showDrawerEvent">
        <view class="cuIcon-list text-grey"></view>
        <text>菜单</text>
      </view>
      <view class="cu-item" wx:for="{{iconList}}" wx:key data-item="{{item}}">
        <navigator url="/pages/{{item.address}}/{{item.address}}">
          <view class="cuIcon-{{item.icon}} text-{{item.color}}">
            <view class="cu-tag badge" wx:if="{{item.badge!=0}}">
              <block wx:if="{{item.badge!=1}}">{{item.badge>99?"99+":item.badge}}</block>
            </view>
          </view>
          <text>{{item.name}}</text>
        </navigator>
      </view>
    </view>
    <view class="contentBox">
       <image wx:if="{{showLoadImage}}" class="loadingImg" src="cloud://dev-nwiao.6465-dev-nwiao-1301582346/loading-white.gif"></image>
    </view>
 
  </view>
</scroll-view>
<view class="DrawerClose {{showDrawer?'show':''}}" bindtap="hideDrawerEvent">
  <text class="cuIcon-pullright"></text>
</view>
<scroll-view scroll-y class="DrawerWindow {{showDrawer?'show':''}}">
  <view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg">
