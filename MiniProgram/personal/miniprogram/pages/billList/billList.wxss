/* miniprogram/pages/billList/billList.wxss */
.billList{min-height:100vh;}
.cu-list.menu-avatar>.cu-item .content{left:20rpx;}
.cu-list.menu-avatar>.cu-item .action{width: 200rpx;}
.dropdownBox{
  position: absolute;z-index: 99999;transition: all 0.4s;height:0;overflow: hidden;background: rgba(0,0,0,.3);
}
.contentBox{display: flex;justify-content: space-around;align-items:center;flex-wrap: wrap;background: #fff;opacity: 0;transition: all 0.4s;}
.dropdownBox .itemBox{width:150rpx;margin: 10rpx 15rpx;}
.dropdownBox .cu-btn{width: 150rpx;}
.showDrop{height:calc(100vh - 120rpx);}
.showContent{opacity: 1;}
.blockNone{height: 0;}
.billList .cu-list{height:calc(100vh - 310rpx);overflow: auto;overflow-x: hidden;}
.explainBox{text-align: center;}
.echartBox .container {
  width: 100%;
  height: 900rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
ec-canvas {
  width: 100%;
  height: 100%;
}
