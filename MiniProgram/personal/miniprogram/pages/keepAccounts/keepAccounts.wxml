<!--miniprogram/pages/keepAccounts/keepAccounts.wxml-->
<view class="container">
  <custom bgColor="bg-gradual-blue" isCustom="{{true}}" content="记账" />
  <form>
    <view class="cu-form-group margin-top">
      <view class="title">消费名称</view>
      <input placeholder="消费名称" value="{{sendData.shoppingName}}" bindblur="getShoppingName"></input>
    </view>
    <view class="cu-form-group">
      <view class="title">消费金额</view>
      <input type="digit" placeholder="消费金额" value="{{sendData.money}}" data-key="money" bindblur="setBindData"></input>
    </view>
    <view class="cu-form-group">
      <view class="title">消费对象</view>
      <picker bindchange="consumptionChange" value="{{consumptionIndex}}" range="{{consumptionList}}" range-key="name">
        <view class="picker">
          {{(consumptionIndex||consumptionIndex === 0) ?consumptionList[consumptionIndex].name:'请选择'}}
        </view>
      </picker>
    </view>
    <view class="cu-form-group">
      <view class="title">消费种类</view>
      <picker bindchange="categoriesChange" value="{{categoriesIndex}}" range="{{categoriesList}}" range-key="name">
        <view class="picker">
          {{(categoriesIndex||categoriesIndex === 0) ?categoriesList[categoriesIndex].name:'请选择'}}
        </view>
      </picker>
    </view>
    <view class="cu-form-group">
      <view class="title">日期</view>
      <picker mode="date" value="{{date}}" start="2015-09-01" end="2020-09-01" bindchange="DateChange">
        <view class="picker">{{date}}</view>
      </picker>
    </view>
    <!-- <view class="cu-form-group">
      <view class="title">时间</view>
      <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="TimeChange">
        <view class="picker">{{time}}</view>
      </picker>
    </view> -->
    <view class="cu-form-group">
      <view class="title">支付方式</view>
      <picker mode="multiSelector" bindchange="MultiChange" bindcolumnchange="MultiColumnChange" value="{{multiIndexList}}" range="{{multiArray}}" range-key="name">
        <view class="picker">{{multiArray[0][multiIndexList[0]].name}}/{{multiArray[1][multiIndexList[1]].name}}</view>
      </picker>
    </view>
    <view class="cu-form-group">
      <view class="title">地址选择</view>
      <picker mode="region" bindchange="RegionChange" value="{{region}}" custom-item="{{customItem}}">
        <view class="picker">
          {{region[0]}}，{{region[1]}}，{{region[2]}}
        </view>
      </picker>
    </view>
  </form>
  <view class="padding">
    <button class="cu-btn block bg-blue margin-tb-sm lg" type="" bindtap="commit">提交</button>
  </view>
</view>